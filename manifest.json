// manifest.json
{
  "manifest_version": 3,
  "name": "bilibili-视频记录",
  "version": "1.0.0",
  "description": "记录播放列表和观看历史，提供视频记录功能。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  // 后台脚本（持久化事件处理）
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  // 用户界面组件
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "options_page": "options.html",
  
  // 内容脚本（注入网页）
  "content_scripts": [{
    "matches": ["*://*.bilibili.com/*"],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_idle"
  }],
  
  // 权限声明
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*.bilibili.com/*"]
}